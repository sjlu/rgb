.frontpage
  margin-top: 15px;
  margin-bottom: 15px;

  .frontpage-headline
    margin-top: 20%;
    text-align: center;

    h2
      margin-top: 15px;

    .logo
      margin: 0 auto;
      max-width: 290px;

  .frontpage-register
    text-align: center;
    max-width: 420px;
    margin: 0 auto;
    margin-top: 40px;

    input
      height: 45px;
      font-size: 16px;

      border-radius: 0;
      box-shadow: none;

      &:focus
        outline: none;
        box-shadow: none;

    .btn
      border-radius: 0;
      background-clip: inherit;