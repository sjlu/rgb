extends layout

block body
  div.container.frontpage
    div.text-right
      a.btn.btn-link(href="/login")
        | Login
    include ./flash
    div.frontpage-headline
      img.logo.logo-lg.img-responsive(src="/images/logo.png")
    div.frontpage-register.row
      form(method="POST")
        div.input-group.col-md-offset-3.col-md-6
          input.input-lg.form-control(type="email", name="email" placeholder="Your email")
          span.input-group-btn
            button.btn.btn-primary.btn-lg(type="submit")
              | Notify Me